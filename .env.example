# Configuración de la base de datos
# Para desarrollo local (SQLite)
DATABASE_URL=sqlite:///gestor_herramientas.db

# Para producción (PostgreSQL - cada cliente tendrá su propia URL)
# DATABASE_URL=postgresql://usuario_cliente:contraseña@host:puerto/nombre_bd_cliente

# Configuración de Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Configuración de seguridad
SECRET_KEY=tu_clave_secreta_aquí

# Nombre del cliente (para identificación)
CLIENT_NAME=NombreDelCliente

# Email de contacto del cliente
CLIENT_EMAIL=cliente@empresa.com
